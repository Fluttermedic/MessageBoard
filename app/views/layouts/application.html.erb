<!DOCTYPE html>
<html>
<head>
  <title>MessageBoard2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1>Hi there!</h1>
<div class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Message Board</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="<%= 'active' if controller?('home') && action?('index')%>"><%= link_to "Home", root_path%></li>
      <li class="<%= 'active' if controller?('posts') && action?('new')%>"><%= link_to "New post", new_post_path%></li>
	   </ul>
	<% if current_user %>
    <p class="navbar-text pull-right"><%= current_user.email %> | <%= link_to "New post", new_post_path %> | <%= link_to "Log out", destroy_user_session_path, method: :delete%></p>
	<% else %>
	 <p class="navbar-text pull-right"><%= link_to "Log in", user_session_path %> | <%= link_to "Sign up", new_user_registration_path %></p>
	 <% end %>
  </div>
</div>
<%= yield %>

</body>
</html>
